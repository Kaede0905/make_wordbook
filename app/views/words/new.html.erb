<main>
  <div class="new_background">
  <div class='wrapper'>
  <h3 class= new_h>新しい単語を作る</h3>
    <div class='new_word_form'>
      <%= form_with model: @word do |form| %>
        <% if @word.errors.any? %>
        <div>
          <ul>
            <% @word.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= form.label :英語 %><br>
        <%= form.text_field :english %>
      </div>
      <div>
        <%= form.label :日本語 %><br>
        <%= form.text_field :japanese %>
      </div>
      <div>
        <%= form.submit value='送信'%>
      </div>
      <% end %>
    </div>
  </div>
  </div>
</main>
